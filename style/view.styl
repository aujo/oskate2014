*/

// CSS based fading for view switch
#main
  position relative
  margin-top 50px
  width 50%
  
  
// pages are absolutely positioned so that they can fade-in/out
.page
  position absolute
  top 0
  left 0
  opacity 0
  transition opacity .1s
  display block
  width 100%
  z-index -1
  padding 15px

  &.is-active
    opacity 1
    z-index 1

	
#menuleft
  position relative
  margin-top 50px
  padding 25px
  float left
  width 25%
  height 100%
  min-height 100%
  H3
    padding: 10px 5px 10px 30px;
  li
    list-style: none;
    padding: 10px 5px 10px 0px;
   
	
